#include <iostream>
using namespace std;
int main() {
    string y;
    int number1, number2, answer, x, total = 0;
    cout << "輸入算式(兩數皆為二位數):";
    cin >> y;
    number1 = (y[0] - 48) * 10 + y[1] - 48;
    x = y[2];
    number2 = (y[3] - 48) * 10 + y[4] - 48;
    if (x == 42) {
        answer = number1 * number2;
    }
    else if (x == 43) {
            answer = number1 + number2;
    }
    else if (x == 45) {
            answer = number1 - number2;
    }
    else if (x == 47) {
            answer = number1 / number2;
    }
    cout << answer;
    for (int y = 0; y < 10; y++) {
        total = total + answer % 10;
        answer = answer / 10;
    }
    if (total % 3 == 0) {
       cout << "是3的倍數";
    }
    else {
         cout << "不是3的倍數";
    }
}
